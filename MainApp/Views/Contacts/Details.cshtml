@model JanuszMail.Models.Contact

@{
    ViewData["Title"] = "Contact details";
}

<h2>Contact details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd>
            <a asp-controller="MailBox" asp-action="Send" asp-route-replyTo="@Model.EmailAddress">
                @Model.EmailAddress
            </a>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-default" asp-action="Index">Back to List</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a class="btn btn-primary" asp-controller="MailBox" asp-action="Send" asp-route-replyTo="@Model.EmailAddress">
        Send a message
    </a>
</div>
